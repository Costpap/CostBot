{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "lib": ["esnext"],
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./build",
        "newLine": "lf",
        "sourceMap": false,
        "baseUrl": ".",
        "removeComments": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "typeRoots": ["./node_modules/@types", "./src/typings"],
    "exclude": ["node_modules", "./src/botconfig-example.ts", "./build"]
}
